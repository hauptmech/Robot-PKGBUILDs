md5sums=('4185e1b58efb3d0b4f1d5858554fc304'
         '9e23101e0464f8a1a8c06e01a2092c56'
         '34970bd1910c34b94f7743c3f93c0dff'
         '9f1cb79a5175b455f88f109fe61b62db'
         '8fdecddc40d2ca1b29d9ec434c88f9cb')
